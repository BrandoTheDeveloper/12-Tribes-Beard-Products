<section class="relative w-full bg-[url(./herbal_background.png)] bg-cover min-h-screen">

  <!-- Overlay layer -->
  <div class="absolute inset-0 bg-black opacity-60"></div>

  <!-- Hero content -->
  <div class="relative grid md:grid-cols-2 items-center px-4 sm:px-6 md:px-8 lg:px-20 xl:px-[120px] min-h-screen text-yellow-500 z-10">

    <!-- Left Column: Text Content -->
    <div class="flex flex-col gap-6">
      <h1 class="text-4xl md:text-5xl font-extrabold leading-tight text-left">
        Beard Care That Honors the Tribe in You!
      </h1>
      <p class="text-lg md:text-xl max-w-xl text-left">
        Pure, purpose-driven beard care. Biblically lawful ingredients that heal, protect, and honor tradition. Crafted from nature, free of compromise.
      </p>
      <a href="/products" class="inline-block bg-green-900 text-yellow-50 px-6 py-3 w-60 text-center rounded-md hover:bg-green-800 transition">
        Shop Our Products
      </a>
    </div>

    <!-- Right Column: Hero Image (optional or decorative) -->
    <div class="flex justify-center">
      <img src="./bearded_man.png" alt="Beard oil with herbs on wood" class="w-full max-w-md rounded-full aspect-square object-cover shadow-md" />
    </div>

  </div>
</section>



